@model ProyectoAnalisis.Model.FacturaElectronica

@{
    ViewBag.Title = "Nueva Factura";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>  ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>

    <h2>Datos del Encabezado</h2>
    <p>  ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Receptor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Receptor.Id, new SelectList(@ViewBag.Clientes, "Id", "Nombre", "seleccione"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Receptor.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Encabezado.CondicionDeVenta, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Encabezado.CondicionDeVenta, "Condicion de venta", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Encabezado.CondicionDeVenta, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Encabezado.IdMetodoPago, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Encabezado.IdMetodoPago, "Metodo de pago", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Encabezado.IdMetodoPago, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p>  ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>
        <h2>Linea De Detalle</h2>
        <p>  ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------</p>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LineaDeDetalle.Detalle, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProductosFactura.Id, new SelectList(Model.productosFacturas, "Id", "Nombre", "seleccione"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LineaDeDetalle.Detalle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LineaDeDetalle.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LineaDeDetalle.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LineaDeDetalle.Cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LineaDeDetalle.Descuento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LineaDeDetalle.Descuento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LineaDeDetalle.Descuento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LineaDeDetalle.UnidadMedida, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LineaDeDetalle.UnidadMedida, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LineaDeDetalle.UnidadMedida, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>

</div>
}

<